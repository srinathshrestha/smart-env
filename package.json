{
  "name": "@srinath-shrestha/smart-env",
  "author": {
    "name": "Srinath Shrestha",
    "email": "me@srinathshrestha.xyz",
    "url": "https://srinathshrestha.xyz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srinathshrestha/smart-env.git",
    "directory": "smart-env"
  },
  "homepage": "https://github.com/srinathshrestha/smart-env#readme",
  "bugs": {
    "url": "https://github.com/srinathshrestha/smart-env/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/srinathshrestha"
  },
  "version": "0.1.6",
  "description": "Secure .env loader with schema validation, type safety, defaults, and helpful error reporting",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo 'No linting configured'",
    "format": "echo 'No formatting configured'",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build",
    "postpack": "rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "keywords": [
    "environment",
    "variables",
    "loader",
    "node.js",
    "dotenv",
    "zod",
    "validation",
    "type-safe",
    "env",
    "config",
    "typescript",
    "schema",
    "secure",
    "immutable",
    "runtime-validation"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
